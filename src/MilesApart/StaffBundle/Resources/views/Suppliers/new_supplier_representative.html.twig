{# src/MilesApart/StaffBundle/Resources/views/Suppliers/new_representative.html.twig #}
{% extends 'MilesApartStaffBundle::layout.html.twig' %}

{#Check if the form has been submitted or not and use the appropriate form template #}
{% if submitted == false %}
    {% form_theme form 'MilesApartAdminBundle:Form:fields.html.twig' 'MilesApartAdminBundle:Form:field_errors.html.twig' %}
{% else %}
    {% form_theme form 'MilesApartAdminBundle:Form:submitted_fields.html.twig' 'MilesApartAdminBundle:Form:field_errors.html.twig' %}
{% endif %}

{#Set active page for interface highlighting #}
{% set active_page = 'suppliers' %}
{% set current_page = 'new_representative' %}

{% block page_name %}
    New representative
{% endblock %}

{# Set the dynamic content for this template #}
{% block page_content %}

    {# Create and show the form #}
    {{ form_start(form) }}
        {{ form_errors(form) }}

        {# Create and show the new admin user type #}
        <fieldset>
            <legend class="text-muted">Supplier</legend>
            {{ form_row(form.supplier) }}
            {{ form_row(form.supplier_representative_start_date) }}

        </fieldset>
        <fieldset>
            <legend class="text-muted">Supplier representative Name</legend>
            {{ form_row(form.supplier_representative_first_name) }}
            {{ form_row(form.supplier_representative_surname) }}
        </fieldset>
        <fieldset>
        	<legend class="text-muted">Supplier represenatative address</legend>
            {{ form_row(form.supplier_representative_address_1) }}
            {{ form_row(form.supplier_representative_address_2) }}
            {{ form_row(form.supplier_representative_town) }}
            {{ form_row(form.supplier_representative_county) }}
            {{ form_row(form.supplier_representative_postcode) }}
            {{ form_row(form.supplier_representative_country) }}
        </fieldset>
        <fieldset>
        	<legend class="text-muted">Supplier representative contact details</legend>
            {{ form_row(form.supplier_representative_mobile_number) }}
            {{ form_row(form.supplier_representative_landline_number) }}
            {{ form_row(form.supplier_representative_email) }}
        </fieldset>

        <fieldset>
            {{ form_row(form.submit) }}
        </fieldset>    
        
        {{ form_rest(form) }}
    
    {{ form_end(form) }}
{% endblock %}