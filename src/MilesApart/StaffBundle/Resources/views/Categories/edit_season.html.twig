{# src/MilesApart/StaffBundle/Resources/views/Categories/new_category.html.twig #}
{% extends 'MilesApartStaffBundle::layout.html.twig' %}

{#Check if the form has been submitted or not and use the appropriate form template #}
{% if submitted == false %}
    {% form_theme edit_form 'MilesApartAdminBundle:Form:fields.html.twig' 'MilesApartAdminBundle:Form:field_errors.html.twig' %}
{% else %}
    {% form_theme edit_form 'MilesApartAdminBundle:Form:submitted_fields.html.twig' 'MilesApartAdminBundle:Form:field_errors.html.twig' %}
{% endif %}

{#Set active page for interface highlighting #}
{% set active_page = 'categories' %}
{% set current_page = 'edit_season' %}

{% block page_name %}
    Edit season
{% endblock %}

{% block page_title %}
    Edit season
{% endblock %}

{# Set the dynamic content for this template #}
{% block page_content %}
    {{ form_start(edit_form) }}
        {{ form_errors(edit_form) }}
         <fieldset>
            <legend class="text-muted">Season</legend>
            {{ form_row(edit_form.season_name) }}
            {{ form_row(edit_form.season_code) }}
            {{ form_row(edit_form.season_background_colour) }}
            {{ form_row(edit_form.season_introduction) }}
            {{ form_row(edit_form.file) }}
        </fieldset>
        <fieldset>
            <legend class="text-muted">Season Dates</legend>
            {{ form_row(edit_form.season_start_date) }}
            {{ form_row(edit_form.season_end_date) }}
            {{ form_row(edit_form.season_purchase_stock_start) }}
        </fieldset>
        <fieldset>
            {{ form_row(edit_form.submit) }}
        </fieldset>
        {{ form_rest(edit_form) }}
    {{ form_end(edit_form) }}


    
{% endblock %}

{% block javascripts %}

{% endblock %}