<div class="price_window_colour_xlarge_main_wraper">

	<!-- The background image for the price type  -->
	<img class="print_bg_img_pwcxl" src="{{ asset('images/price_templates/Price-Window-XLarge.jpg') }}" />
	
	<!-- Price -->
	<h1 class="price_window_colour_xlarge_price">{{ entity.getProduct.getCurrentPriceDisplay }}</h1>
	
	<!-- Barcode -->
	{#{{mopa_barcode_url|replace({'{{region_top}}': region_top, '{{region_center}}': region_center})}}#}


	<img class="price_window_colour_xlarge_barcode_image" alt="[barcode]" src="{{ mopa_barcode_url('Ean13', entity.getProduct.getProductBarcode|slice(0,12), {'barcodeOptions': {'barHeight' : 40, drawText : false}, 'rendererOptions': {'width':115, 'height':40}}) }}">

	<!-- Supplier Code -->
	<h6 class="price_window_colour_xlarge_supplier_code">SC: {{ entity.getProduct.getProductSupplierCode }}</h6>
</div>