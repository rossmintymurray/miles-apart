	  		<th class="small-12 large-12 columns first last">
	    		<table>
	    			<tr>
	    				<th style="border-bottom:2px solid #008CBA;">
					      	
						</th>
						<th class="expander"></th>
					</tr>
				</table>
	    	</th>
	    </tr>
	</table>

	<table class="spacer">
        <tbody>
          	<tr>
            	<th height="20px" style="font-size:20px;line-height:20px;">&#xA0;</th>
          	</tr>
        </tbody>
    </table>


	{# Make the table #}
	<table class="row">
	  	<tr>
	  		<th class="columns first last">
	    		<table>
					<tr style="background-color:#292929;color:#fff;padding:5px 3px 5px 3px">
						<th style="padding:5px 3px 5px 6px;color:#fff;font-size:13px">Code</th>
						<th style="padding:5px 3px 5px 3px;color:#fff;font-size:13px">Product name</th>
						<th style="text-align:center;padding:5px 3px 5px 3px;color:#fff;font-size:13px">Unit Qty</th>
						<th style="text-align:center;padding:5px 3px 5px 3px;color:#fff;font-size:13px">Inner Qty</th>
						<th style="text-align:center;padding:5px 3px 5px 3px;color:#fff;font-size:13px">Outers Qty</th>
					</tr>

					{% for purchase_order_product in purchase_order.getpurchaseorderproduct %}
						{% if loop.index is divisible by(2) %}
							<tr style="background-color:#fff;padding:5px 3px 5px 3px">
						{% else %}
							<tr style="background-color:#ebebeb;">
						{% endif %}

							<td style="padding:5px 3px 5px 6px;font-size:13px">{{ purchase_order_product.product.productsuppliercode }}</td>
							<td style="padding:5px 3px 5px 3px;font-size:13px">{{ purchase_order_product.product.productname }}</td>
							<td style="text-align:center;padding:5px 3px 5px 3px;font-size:13px">{{ purchase_order_product.purchaseorderproductquantity }}</td>
							<td style="text-align:center;padding:5px 3px 5px 3px;font-size:13px">{{ purchase_order_product.purchaseorderproductinners }}</td>
							<td style="text-align:center;padding:5px 3px 5px 3px;font-size:13px">{{ purchase_order_product.purchaseorderproductouters }}</td>
						</tr>
					{% endfor %}
			
				</table>
				<table class="spacer">
                    <tbody>
                      	<tr>
                        	<th height="20px" style="font-size:20px;line-height:20px;">&#xA0;</th>
                      	</tr>
                    </tbody>
                </table>
