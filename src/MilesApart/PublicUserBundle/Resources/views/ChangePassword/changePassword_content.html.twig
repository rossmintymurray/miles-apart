<p>Please complete the form below to change your password.</p>
<form action="{{ path('fos_user_change_password') }}" {{ form_enctype(form) }} method="POST" class="fos_user_change_password">
	<div class="row">
    	<div class="large-9 columns">
	   		<div class="row">
	            <div class="small-4 columns">
	            	 {{ form_label(form.current_password) }}
	            </div>
	            <div class="small-8 columns">
	                {{ form_widget(form.current_password) }}
	                {{ form_errors(form.current_password) }}
	            </div>
	        </div>

	        <div class="row">
	            <div class="small-4 columns">
	                {{ form_label(form.new.first) }}
	            </div>
	            <div class="small-8 columns">
	                {{ form_widget(form.new.first) }}
	                {{ form_errors(form.new.first) }}
	            </div>
	        </div>

	        <div class="row">
	            <div class="small-4 columns">
	                {{ form_label(form.new.second) }}
	            </div>
	            <div class="small-8 columns">
	                {{ form_widget(form.new.second) }}
	                {{ form_errors(form.new.second) }}
	            </div>
	        </div>
	        <div class="row">
		    	<div class="small-8 small-offset-4 columns">
		        	<input type="submit" value="{{ 'change_password.submit'|trans({}, 'FOSUserBundle') }}" class="button small-12" />
		        </div>
		    </div>
	    </div>
    </div>
    {{ form_rest(form) }}
</form>
