{# src/MilesApart/AdminBundle/Resources/views/Employees/show.html.twig #}
{% extends 'MilesApartAdminBundle::Page/campaign.html.twig' %}

{# Set  current page for interface highlighting #}
{% set current_page = 'marketing_email_component_type' %}

{# Set the page title #}
{% block title %}
    {{ entity.marketingemailcomponenttypename }} - Marketing Email Component Type
{% endblock%}

{# Set the page header #}
{% block page_name %}
    {{ entity.marketingemailcomponenttypename }} - Marketing Email Component Type           
{% endblock %}   

{# Set the page sub header #}
{% block page_introduction %}
    View Marketing Email Component Type details
{% endblock %}

{% block page_content -%}


    <table class=\"table table-hover table-bordered table-striped main_content_table show_table\">
        <tbody>
            <tr>
                <th>ID</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Marketing email component type name</th>
                <td>{{ entity.marketingemailcomponenttypename }}</td>
            </tr>
            <tr>
                <th>Marketing email component type default content</th>
                <td>{{ entity.marketingemailcomponenttypedefaultcontent }}</td>
            </tr>
            <tr>
                <th>Marketing email component type description</th>
                <td>{{ entity.marketingemailcomponenttypedescription }}</td>
            </tr>
            <tr>
                <th>Marketing email component type stylesheet url</th>
                <td>{{ entity.marketingemailcomponenttypestylesheeturl }}</td>
            </tr>
            <tr>
                <th>Marketing email component type template url</th>
                <td>{{ entity.marketingemailcomponenttypetemplateurl }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('campaign_marketing-email-component-type') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('campaign_marketing-email-component-type_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
