{# src/MilesApart/AdminBundle/Resources/views/Page/Employees/all.html.twig #}
{% extends 'MilesApartAdminBundle::Page/business.html.twig' %}

{#Check if the form has been submitted or not and use the appropriate form template #}
{% if submitted == false %}
    {% form_theme edit_form 'MilesApartAdminBundle:Form:fields.html.twig' 'MilesApartAdminBundle:Form:field_errors.html.twig' %}
{% else %}
    {% form_theme edit_form 'MilesApartAdminBundle:Form:submitted_fields.html.twig' 'MilesApartAdminBundle:Form:field_errors.html.twig' %}
{% endif %}

{# Check if the current page is set, if not set to overview #}
{% if current_page is not defined %}
  {% set current_page = 'business_premises' %}
{% endif %}

{# Set the title of the page displayed in the browser #}
{% block title %}
    Edit Business Premises
{% endblock%}

{# Set the header of the page #}
{% block page_name %}
    Edit Business Premises
{% endblock %}   

{# Set the introduction of the page #}
{% block page_introduction %}
  Add new and make changes to existing business premises
{% endblock %}


{# Set the dynamic content for this template #}
{% block page_content %}
    

    {{ form_start(edit_form) }}
        {{ form_errors(edit_form) }}
         <fieldset>
            <legend class="text-muted">Name</legend>
            {{ form_row(edit_form.business_premises_name) }}
            {{ form_row(edit_form.business_premises_type) }}
            {{ form_row(edit_form.business) }}
        </fieldset>
        <fieldset>
            <legend class="text-muted">Address</legend>
            {{ form_row(edit_form.business_premises_address_line_1) }}
            {{ form_row(edit_form.business_premises_address_line_2) }}
            {{ form_row(edit_form.business_premises_town) }}
            {{ form_row(edit_form.business_premises_county) }}
            {{ form_row(edit_form.business_premises_postcode) }}
        </fieldset>
        <fieldset>
            <legend class="text-muted">Contact</legend>
            {{ form_row(edit_form.business_premises_phone) }}
            {{ form_row(edit_form.business_premises_email) }}
        </fieldset>
        <fieldset>
            {{ form_row(edit_form.submit) }}
        </fieldset>
        {{ form_rest(edit_form) }}
   
    {{ form_end(edit_form) }}

        <ul class="record_actions">
    <li>
        <a href="{{ path('business_business-premises') }}">
            Back to the list
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
