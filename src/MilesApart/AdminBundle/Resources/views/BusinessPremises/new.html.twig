{# src/MilesApart/AdminBundle/Resources/views/Employees/new.html.twig #}
{% extends 'MilesApartAdminBundle::Page/business.html.twig' %}

{#Check if the form has been submitted or not and use the appropriate form template #}
{% if submitted == false %}
    {% form_theme form 'MilesApartAdminBundle:Form:fields.html.twig' 'MilesApartAdminBundle:Form:field_errors.html.twig' %}
{% else %}
    {% form_theme form 'MilesApartAdminBundle:Form:submitted_fields.html.twig' 'MilesApartAdminBundle:Form:field_errors.html.twig' %}
{% endif %}

{# Check if the current page is set, if not set to overview #}
{% if current_page is not defined %}
  {% set current_page = 'new_business_premises' %}
{% endif %}

{# Set the title of the page displayed in the browser #}
{% block title %}
	New Business Premises
{% endblock%}

{# Set the header of the page #}
{% block page_name %}
	New Business Premises		
{% endblock %}   

{# Set the introduction of the page #}
{% block page_introduction %}
   	Complete the form below to add a new business premises to the system
{% endblock %}

{% block page_content -%}

    {{ form_start(form) }}
        {{ form_errors(form) }}
         <fieldset>
            <legend class="text-muted">Name</legend>
            {{ form_row(form.business_premises_name) }}
            {{ form_row(form.business_premises_type) }}
            {{ form_row(form.business) }}
        </fieldset>
        <fieldset>
            <legend class="text-muted">Address</legend>
            {{ form_row(form.business_premises_address_line_1) }}
            {{ form_row(form.business_premises_address_line_2) }}
            {{ form_row(form.business_premises_town) }}
            {{ form_row(form.business_premises_county) }}
            {{ form_row(form.business_premises_postcode) }}
        </fieldset>
        <fieldset>
            <legend class="text-muted">Contact</legend>
            {{ form_row(form.business_premises_phone) }}
            {{ form_row(form.business_premises_email) }}
        </fieldset>
        <fieldset>
            {{ form_row(form.submit) }}
        </fieldset>
        {{ form_rest(form) }}
   
    {{ form_end(form) }}

        <ul class="record_actions">
    <li>
        <a href="{{ path('business_business-premises') }}">
            Back to the list
        </a>
    </li>
</ul>
{% endblock %}
