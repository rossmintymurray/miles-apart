{# src/MilesApart/AdminBundle/Resources/views/Employees/new.html.twig #}
{% extends 'MilesApartAdminBundle::Page/category.html.twig' %}

{# Check if the form has been submitted or not and use the appropriate form template #}
{% if submitted == false %}
    {% form_theme form 'MilesApartAdminBundle:Form:fields.html.twig' 'MilesApartAdminBundle:Form:field_errors.html.twig' %}
{% else %}
    {% form_theme form 'MilesApartAdminBundle:Form:submitted_fields.html.twig' 'MilesApartAdminBundle:Form:field_errors.html.twig' %}
{% endif %}

{# Check if the current page is set, if not set to overview #}
{% if current_page is not defined %}
  {% set current_page = 'new_keyword_specific_category' %}
{% endif %}

{# Set the title of the page displayed in the browser #}
{% block title %}
	New Keyword Specific Category
{% endblock%}

{# Set the header of the page #}
{% block page_name %}
	New Keyword Specific Category		
{% endblock %}   

{# Set the introduction of the page #}
{% block page_introduction %}
   	Complete the form below to add a new keyword specific category to the system
{% endblock %}

{% block page_content -%}

     {# Create and show the form #}
    {{ form_start(form) }}
        {{ form_errors(form) }}

        {# Create and show the new admin user type #}
        <fieldset>
            <legend class="text-muted">Keyword Specific Category</legend>
            {{ form_row(form.keyword) }}
            {{ form_row(form.specific_category) }}
            
        </fieldset>
        <fieldset>
            {{ form_row(form.submit) }}
        </fieldset>    
        
        {{ form_rest(form) }}
    
    {{ form_end(form) }}

        <ul class="record_actions">
    <li>
        <a href="{{ path('category_keyword-specific-category') }}">
            Back to the list
        </a>
    </li>
</ul>
{% endblock %}
