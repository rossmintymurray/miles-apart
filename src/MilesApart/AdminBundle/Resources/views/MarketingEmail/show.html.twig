{# src/MilesApart/AdminBundle/Resources/views/Employees/show.html.twig #}
{% extends 'MilesApartAdminBundle::Page/campaign.html.twig' %}

{# Set  current page for interface highlighting #}
{% set current_page = 'marketing_email' %}

{# Set the page title #}
{% block title %}
    {{ entity.marketingemailname }} - Marketing Email
{% endblock%}

{# Set the page header #}
{% block page_name %}
    {{ entity.marketingemailname }} - Marketing Email           
{% endblock %}   

{# Set the page sub header #}
{% block page_introduction %}
    View Marketing Email details
{% endblock %}

{% block page_content -%}

    <table class=\"table table-hover table-bordered table-striped main_content_table show_table\">
        <tbody>
            <tr>
                <th>ID</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Marketing email subject line</th>
                <td>{{ entity.marketingemailsubjectline }}</td>
            </tr>
            <tr>
                <th>Marketing email name</th>
                <td>{{ entity.marketingemailname }}</td>
            </tr>
            <tr>
                <th>Marketing email description</th>
                <td>{{ entity.marketingemaildescription }}</td>
            </tr>
            <tr>
                <th>Marketing email date created</th>
                <td>{{ entity.marketingemaildatecreated|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Marketing email date modified</th>
                <td>{{ entity.marketingemaildatemodified|date('Y-m-d H:i:s') }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('campaign_marketing-email') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('campaign_marketing-email_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
