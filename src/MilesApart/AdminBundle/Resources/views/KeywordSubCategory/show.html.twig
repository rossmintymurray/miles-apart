{# src/MilesApart/AdminBundle/Resources/views/Employees/show.html.twig #}
{% extends 'MilesApartAdminBundle::Page/category.html.twig' %}

{# Set  current page for interface highlighting #}
{% set current_page = 'keyword_sub_category' %}

{# Set the page title #}
{% block title %}
    Show Employee
{% endblock%}

{# Set the page header #}
{% block page_name %}
    Show Employee           
{% endblock %}   

{# Set the page sub header #}
{% block page_introduction %}
    View employee details
{% endblock %}

{% block page_content -%}

    <table class="table table-hover table-bordered table-striped main_content_table show_table">
        <tbody>
            <tr>
                <th>ID</th>
                <td>{{ entity.id }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('category_keyword-sub-category') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('category_keyword-sub-category_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
