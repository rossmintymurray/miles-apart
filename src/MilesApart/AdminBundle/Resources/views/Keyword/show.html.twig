{# src/MilesApart/AdminBundle/Resources/views/Employees/show.html.twig #}
{% extends 'MilesApartAdminBundle::Page/category.html.twig' %}

# Set  current page for interface highlighting #}
{% set current_page = 'all_employees' %}

{# Set the page title #}
{% block title %}
    Show Keyword
{% endblock%}

{# Set the page header #}
{% block page_name %}
    Show Keyword           
{% endblock %}   

{# Set the page sub header #}
{% block page_introduction %}
    View keyword details
{% endblock %}

{% block page_content -%}

{# Create sub page header row #}
    <div class="row">
        {#C reate column for left sub page header content #}
        <div class="col-md-9">
            
            {# Left sub page header content #}
            

    <h1>Keyword</h1>

    <table class="table table-hover table-bordered table-striped main_content_table show_table">
        <tbody>
            <tr>
                <th>ID</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Keyword Word</th>
                <td>{{ entity.keywordword }}</td>
            </tr>
            <tr>
                <th>Keyword Slug</th>
                <td>{{ entity.keywordslug }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('category_keyword') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('category_keyword_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
