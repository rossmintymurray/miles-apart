{# src/MilesApart/AdminBundle/Resources/views/Employees/new.html.twig #}
{% extends 'MilesApartAdminBundle::Page/procurement.html.twig' %}

{#Check if the form has been submitted or not and use the appropriate form template #}
{% if submitted == false %}
    {% form_theme form 'MilesApartAdminBundle:Form:fields.html.twig' 'MilesApartAdminBundle:Form:field_errors.html.twig' %}
{% else %}
    {% form_theme form 'MilesApartAdminBundle:Form:submitted_fields.html.twig' 'MilesApartAdminBundle:Form:field_errors.html.twig' %}
{% endif %}

{# Check if the current page is set, if not set to overview #}
{% if current_page is not defined %}
  {% set current_page = 'new_supplier_delivery_product' %}
{% endif %}

{# Set the title of the page displayed in the browser #}
{% block title %}
	New Supplier Delivery Product
{% endblock%}

{# Set the header of the page #}
{% block page_name %}
	New Supplier Delivery Product		
{% endblock %}   

{# Set the introduction of the page #}
{% block page_introduction %}
   	Complete the form below to add a new Supplier Delivery Product to the system
{% endblock %}

{% block page_content -%}

    {{ form_start(form) }}
        {{ form_errors(form) }}
         <fieldset>
            <legend class="text-muted">Product Delivery Quantity</legend>
            {{ form_row(form.supplier_delivery_note_qty) }}
            {{ form_row(form.supplier_delivery_qty_delivered) }}
          </fieldset>
          <fieldset>
            <legend class="text-muted">Product</legend>
            {{ form_row(form.product) }}
          </fieldset>
          <fieldset>
            <legend class="text-muted">Supplier Delivery</legend>
            {{ form_row(form.supplier_delivery) }}
            </fieldset>
        {{ form_rest(form) }}
    </form>
    {{ form_end(form) }}

        <ul class="record_actions">
    <li>
        <a href="{{ path('goods-in_supplier-delivery-product') }}">
            Back to the list
        </a>
    </li>
</ul>
{% endblock %}
