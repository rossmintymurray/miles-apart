{# src/MilesApart/AdminBundle/Resources/views/Employees/show.html.twig #}
{% extends 'MilesApartAdminBundle::Page/procurement.html.twig' %}

{# Set  current page for interface highlighting #}
{% set current_page = 'purchase_order' %}

{# Set the page title #}
{% block title %}
    {{ entity.supplierpurchaseordercode }} - Purchase Order
{% endblock%}

{# Set the page header #}
{% block page_name %}
    {{ entity.supplierpurchaseordercode }} - Purchase Order           
{% endblock %}   

{# Set the page sub header #}
{% block page_introduction %}
    View Purchase Order details
{% endblock %}

{% block page_content -%}

    <table class=\"table table-hover table-bordered table-striped main_content_table show_table\">
        <tbody>
            <tr>
                <th>ID</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Supplie purchase order code</th>
                <td>{{ entity.supplierpurchaseordercode }}</td>
            </tr>
            <tr>
                <th>Purchase order date created</th>
                <td>{{ entity.purchaseorderdatecreated|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Purchase order date modified</th>
                <td>{{ entity.purchaseorderdatemodified|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Purchase order date completed</th>
                <td>{{ entity.purchaseorderdatecompleted|date('Y-m-d H:i:s') }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('procurement_purchase-order') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('procurement_purchase-order_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
