{# src/MilesApart/AdminBundle/Resources/views/Employees/new.html.twig #}
{% extends 'MilesApartAdminBundle::Page/procurement.html.twig' %}

{#Check if the form has been submitted or not and use the appropriate form template #}
{% if submitted == false %}
    {% form_theme form 'MilesApartAdminBundle:Form:fields.html.twig' 'MilesApartAdminBundle:Form:field_errors.html.twig' %}
{% else %}
    {% form_theme form 'MilesApartAdminBundle:Form:submitted_fields.html.twig' 'MilesApartAdminBundle:Form:field_errors.html.twig' %}
{% endif %}

{# Check if the current page is set, if not set to overview #}
{% if current_page is not defined %}
  {% set current_page = 'new_purchase_order' %}
{% endif %}

{# Set the title of the page displayed in the browser #}
{% block title %}
	New Purchase Order
{% endblock%}

{# Set the header of the page #}
{% block page_name %}
	New Purchase Order		
{% endblock %}   

{# Set the introduction of the page #}
{% block page_introduction %}
   	Complete the form below to add a new Purchase Order to the system
{% endblock %}

{% block page_content -%}

    {{ form_start(form) }}
        {{ form_errors(form) }}
         <fieldset>
            <legend class="text-muted">Purchase Order Details</legend>
            {{ form_row(form.supplier_purchase_order_code) }}
            {{ form_row(form.purchase_order_date_completed) }}
          </fieldset>
          <fieldset>
            <legend class="text-muted">Supplier</legend>
            {{ form_row(form.supplier) }}
            </fieldset>
          <fieldset>
            <legend class="text-muted">Order State</legend>
            {{ form_row(form.purchase_order_state) }}
            </fieldset>
        {{ form_rest(form) }}
    </form>
    {{ form_end(form) }}

        <ul class="record_actions">
    <li>
        <a href="{{ path('procurement_purchase-order') }}">
            Back to the list
        </a>
    </li>
</ul>
{% endblock %}
