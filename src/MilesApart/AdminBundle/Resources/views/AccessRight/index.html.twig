{# src/MilesApart/AdminBundle/Resources/views/AccessRight/index.html.twig #}
{% extends 'MilesApartAdminBundle::Page/webmanagement.html.twig' %}

{# Check if the current page is set, if not set to overview #}
{% if current_page is not defined %}
  {% set current_page = 'access_rights' %}
{% endif %}

{# Set the title of the page displayed in the browser #}
{% block title %}
    Access Rights
{% endblock%}

{# Set the header of the page #}
{% block page_name %}
    Access Rights         
{% endblock %}   

{# Set the introduction of the page #}
{% block page_introduction %}
  Add new and make changes to access rights for Miles Apart ISys
{% endblock %}
{% block page_content -%}

    <table class="table table-hover table-bordered table-striped main_content_table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Access right action</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in pager %}
            <tr>
                <td><a href="{{ path('website-management_access-right_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.accessrightaction }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('website-management_access-right_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('website-management_access-right_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('website-management_access-right_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
{% endblock %}

{% block pagination_links %}
  {% if pager.haveToPaginate %}
    {{ pagerfanta(pager, 'twitter_bootstrap3', pagerfanta_opts) }}
  {% endif %} 
{% endblock %}
