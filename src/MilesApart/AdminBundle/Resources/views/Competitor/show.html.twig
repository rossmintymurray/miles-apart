{# src/MilesApart/AdminBundle/Resources/views/Employees/show.html.twig #}
{% extends 'MilesApartAdminBundle::Page/business.html.twig' %}

{# Set  current page for interface highlighting #}
{% set current_page = 'all_employees' %}

{# Set the page title #}
{% block title %}
    {{ entity.competitorname }} - Competitor
{% endblock%}

{# Set the page header #}
{% block page_name %}
    {{ entity.competitorname }} - Competitor         
{% endblock %}   

{# Set the page sub header #}
{% block page_introduction %}
    View competitor details
{% endblock %}

{% block page_content -%}

    <table class="table table-hover table-bordered table-striped main_content_table show_table">
        <tbody>
            <tr>
                <th>ID</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Competitor name</th>
                <td>{{ entity.competitorname }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('business_competitor') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('business_competitor_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
