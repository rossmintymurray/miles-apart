{# src/MilesApart/AdminBundle/Resources/views/Employees/index.html.twig #}
{% extends 'MilesApartAdminBundle::Page/procurement.html.twig' %}


{# Check if the current page is set, if not set to overview #}
{% if current_page is not defined %}
  {% set current_page = 'logistics_company' %}
{% endif %}

{# Set the title of the page displayed in the browser #}
{% block title %}
    Logistics Companies
{% endblock%}

{# Set the header of the page #}
{% block page_name %}
    Logistics Companies           
{% endblock %}   

{# Set the introduction of the page #}
{% block page_introduction %}
  Add new and make changes to existing Logistics Companies
{% endblock %}

{% block page_content -%}

    <table class="table table-hover table-bordered table-striped main_content_table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Logistics company name</th>
                <th>Logistics company address line 1</th>
                <th>Logistics company address line 2</th>
                <th>Logistics company address town</th>
                <th>Logistics company address county</th>
                <th>Logistics company address country</th>
                <th>Logistics company address postcode</th>
                <th>Logistics company phone</th>
                <th>Logistics company fax</th>
                <th>Logistics company email</th>
                <th>Logistics company date created</th>
                <th>Logistics company date modified</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in pager %}
            <tr>
                <td><a href="{{ path('procurement_logistics-company_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.logisticscompanyname }}</td>
                <td>{{ entity.logisticscompanyaddressline1 }}</td>
                <td>{{ entity.logisticscompanyaddressline2 }}</td>
                <td>{{ entity.logisticscompanyaddresstown }}</td>
                <td>{{ entity.logisticscompanyaddresscounty }}</td>
                <td>{{ entity.logisticscompanyaddresscountry }}</td>
                <td>{{ entity.logisticscompanyaddresspostcode }}</td>
                <td>{{ entity.logisticscompanyphone }}</td>
                <td>{{ entity.logisticscompanyfax }}</td>
                <td>{{ entity.logisticscompanyemail }}</td>
                <td>{% if entity.logisticscompanydatecreated %}{{ entity.logisticscompanydatecreated|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.logisticscompanydatemodified %}{{ entity.logisticscompanydatemodified|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('procurement_logistics-company_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('procurement_logistics-company_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('procurement_logistics-company_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}

{# Check if pagination needed and if so, create the pagination links #}
{% block pagination_links %}
  {% if pager.haveToPaginate %}
    {{ pagerfanta(pager, 'twitter_bootstrap3', pagerfanta_opts) }}
  {% endif %} 
{% endblock %}

{% block sidebar_content %}
  <h3 class="underline">Quick links</h3>

  <h4 class="light">New purchase order</h4>
  <h4 class="light">Email company</h4>
  <h4 class="light">Print statement</h4>
  <h4 class="light">Book in delivery</h4>

{% endblock %}
