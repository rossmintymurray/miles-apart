{# src/MilesApart/AdminBundle/Resources/views/Employees/new.html.twig #}
{% extends 'MilesApartAdminBundle::Page/procurement.html.twig' %}

{#Check if the form has been submitted or not and use the appropriate form template #}
{% if submitted == false %}
    {% form_theme form 'MilesApartAdminBundle:Form:fields.html.twig' 'MilesApartAdminBundle:Form:field_errors.html.twig' %}
{% else %}
    {% form_theme form 'MilesApartAdminBundle:Form:submitted_fields.html.twig' 'MilesApartAdminBundle:Form:field_errors.html.twig' %}
{% endif %}

{# Check if the current page is set, if not set to overview #}
{% if current_page is not defined %}
  {% set current_page = 'new_logistics_company' %}
{% endif %}

{# Set the title of the page displayed in the browser #}
{% block title %}
	New Logistics Company
{% endblock%}

{# Set the header of the page #}
{% block page_name %}
	New Logistics Company		
{% endblock %}   

{# Set the introduction of the page #}
{% block page_introduction %}
   	Complete the form below to add a new Logistics Company to the system
{% endblock %}

{% block page_content -%}

    {{ form_start(form) }}
        {{ form_errors(form) }}
          <fieldset>
            <legend class="text-muted">Logistics Company Name</legend>
            {{ form_row(form.logistics_company_name) }}
          </fieldset>
          <fieldset>
            <legend class="text-muted">Logistics Company Address</legend>
            {{ form_row(form.logistics_company_address_line_1) }}
            {{ form_row(form.logistics_company_address_line_2) }}
            {{ form_row(form.logistics_company_address_town) }}
            {{ form_row(form.logistics_company_address_county) }}
            {{ form_row(form.logistics_company_address_country) }}
            {{ form_row(form.logistics_company_address_postcode) }}
          </fieldset>
          <fieldset>
            <legend class="text-muted">Logistics Company Contact</legend>
            {{ form_row(form.logistics_company_phone) }}
            {{ form_row(form.logistics_company_fax) }}
            {{ form_row(form.logistics_company_email) }}
          </fieldset>
        {{ form_rest(form) }}
    </form>
    {{ form_end(form) }}

        <ul class="record_actions">
    <li>
        <a href="{{ path('procurement_logistics-company') }}">
            Back to the list
        </a>
    </li>
</ul>
{% endblock %}
