{# src/MilesApart/AdminBundle/Resources/views/Employees/show.html.twig #}
{% extends 'MilesApartAdminBundle::Page/customer.html.twig' %}

# Set  current page for interface highlighting #}
{% set current_page = 'customer' %}

{# Set the page title #}
{% block title %}
    Show Customer
{% endblock%}

{# Set the page header #}
{% block page_name %}
    Show Customer           
{% endblock %}   

{# Set the page sub header #}
{% block page_introduction %}
    View customer details
{% endblock %}

{% block page_content -%}

    <table class="table table-hover table-bordered table-striped main_content_table show_table">
        <tbody>
            <tr>
                <th>ID</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Customer date created</th>
                <td>{{ entity.customerdatecreated|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Customer date updated</th>
                <td>{{ entity.customerdatemodified|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Vat invoice option</th>
                <td>{{ entity.vatinvoiceoption }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('customer_customer') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('customer_customer_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
