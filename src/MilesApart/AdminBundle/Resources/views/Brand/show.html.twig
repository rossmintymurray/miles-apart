{# src/MilesApart/AdminBundle/Resources/views/Employees/show.html.twig #}
{% extends 'MilesApartAdminBundle::Page/product.html.twig' %}

{# Set  current page for interface highlighting #}
{% set current_page = 'brand' %}

{# Set the page title #}
{% block title %}
    {{ entity.brandname }} - Brand
{% endblock%}

{# Set the page header #}
{% block page_name %}
    {{ entity.brandname }} - Brand           
{% endblock %}   

{# Set the page sub header #}
{% block page_introduction %}
    View brand details
{% endblock %}

{% block page_content -%}

    <table class="table table-hover table-bordered table-striped main_content_table show_table">
        <tbody>
            <tr>
                <th>ID</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Brand name</th>
                <td>{{ entity.brandname }}</td>
            </tr>
            <tr>
                <th>Brand slug</th>
                <td>{{ entity.brandslug }}</td>
            </tr>
            <tr>
                <th>Brand logo image path</th>
                <td>{{ entity.brandlogoimagepath }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('product_brand') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('product_brand_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
