{# src/MilesApart/AdminBundle/Resources/views/Page/Employees/all.html.twig #}
{% extends 'MilesApartAdminBundle::Page/business.html.twig' %}

{#Check if the form has been submitted or not and use the appropriate form template #}
{% if submitted == false %}
    {% form_theme edit_form 'MilesApartAdminBundle:Form:fields.html.twig' 'MilesApartAdminBundle:Form:field_errors.html.twig' %}
{% else %}
    {% form_theme edit_form 'MilesApartAdminBundle:Form:submitted_fields.html.twig' 'MilesApartAdminBundle:Form:field_errors.html.twig' %}
{% endif %}

{# Check if the current page is set, if not set to overview #}
{% if current_page is not defined %}
  {% set current_page = 'competitor_product' %}
{% endif %}

{# Set the title of the page displayed in the browser #}
{% block title %}
    Edit Competitor Product
{% endblock%}

{# Set the header of the page #}
{% block page_name %}
    Edit Competitor Product	 	
{% endblock %}   

{# Set the introduction of the page #}
{% block page_introduction %}
  Edit competitor product details  
{% endblock %}


{# Set the dynamic content for this template #}
{% block page_content %}
    

    {{ form_start(edit_form) }}
        {{ form_errors(edit_form) }}
         <fieldset>
            <legend class="text-muted">Brand</legend>
            {{ form_row(edit_form.competitor) }}
            {{ form_row(edit_form.competitor_product_current_price) }}
            {{ form_row(edit_form.competitor_product_current_price_set) }}
        </fieldset>
        <fieldset>
            <legend class="text-muted">Product</legend>
            {{ form_row(edit_form.product) }}

        </fieldset>
        <fieldset>
            {{ form_row(edit_form.submit) }}
        </fieldset>
        {{ form_rest(edit_form) }}
    {{ form_end(edit_form) }}

        <ul class="record_actions">
    <li>
        <a href="{{ path('business_competitor-product') }}">
            Back to the list
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
