{# src/MilesApart/AdminBundle/Resources/views/Employees/new.html.twig #}
{% extends 'MilesApartAdminBundle::Page/procurement.html.twig' %}

{#Check if the form has been submitted or not and use the appropriate form template #}
{% if submitted == false %}
    {% form_theme form 'MilesApartAdminBundle:Form:fields.html.twig' 'MilesApartAdminBundle:Form:field_errors.html.twig' %}
{% else %}
    {% form_theme form 'MilesApartAdminBundle:Form:submitted_fields.html.twig' 'MilesApartAdminBundle:Form:field_errors.html.twig' %}
{% endif %}

{# Check if the current page is set, if not set to overview #}
{% if current_page is not defined %}
  {% set current_page = 'new_supplier_delivery' %}
{% endif %}

{# Set the title of the page displayed in the browser #}
{% block title %}
	New Supplier Delivery
{% endblock%}

{# Set the header of the page #}
{% block page_name %}
	New Supplier Delivery		
{% endblock %}   

{# Set the introduction of the page #}
{% block page_introduction %}
   	Complete the form below to add a new Supplier Delivery to the system
{% endblock %}

{% block page_content -%}

    {{ form_start(form) }}
        {{ form_errors(form) }}
         <fieldset>
            <legend class="text-muted">Delivery Details</legend>
            {{ form_row(form.booked_in_datetime) }}
            {{ form_row(form.contact_name) }}
            {{ form_row(form.contact_phone_number) }}
          </fieldset>
          <fieldset>
            <legend class="text-muted">Supplier &amp; Courier</legend>
            {{ form_row(form.supplier) }}
            {{ form_row(form.logistics_company) }}
          </fieldset>
          <fieldset>
            <legend class="text-muted">Delivery Premises</legend>
            {{ form_row(form.business_premises) }}
            {{ form_row(form.employee) }}
          </fieldset>
          <fieldset>
            <legend class="text-muted">Delivered</legend>
            {{ form_row(form.delivered_datetime) }}
          </fieldset>
        {{ form_rest(form) }}
    </form>
    {{ form_end(form) }}

        <ul class="record_actions">
    <li>
        <a href="{{ path('goods-in_supplier-delivery') }}">
            Back to the list
        </a>
    </li>
</ul>
{% endblock %}
