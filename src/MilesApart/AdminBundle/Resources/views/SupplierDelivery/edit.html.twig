{# src/MilesApart/AdminBundle/Resources/views/Page/Employees/all.html.twig #}
{% extends 'MilesApartAdminBundle::Page/procurement.html.twig' %}

{#Check if the form has been submitted or not and use the appropriate form template #}
{% if submitted == false %}
    {% form_theme edit_form 'MilesApartAdminBundle:Form:fields.html.twig' 'MilesApartAdminBundle:Form:field_errors.html.twig' %}
{% else %}
    {% form_theme edit_form 'MilesApartAdminBundle:Form:submitted_fields.html.twig' 'MilesApartAdminBundle:Form:field_errors.html.twig' %}
{% endif %}

{# Check if the current page is set, if not set to overview #}
{% if current_page is not defined %}
  {% set current_page = 'supplier_delivery' %}
{% endif %}

{# Set the title of the page displayed in the browser #}
{% block title %}
  Edit Supplier Delivery
{% endblock%}

{# Set the header of the page #}
{% block page_name %}
  Edit Supplier Delivery		
{% endblock %}   

{# Set the introduction of the page #}
{% block page_introduction %}
  Edit existing Supplier Delivery
{% endblock %}

{# Set the dynamic content for this template #}
{% block page_content %}

    {{ form_start(edit_form) }}
        {{ form_errors(edit_form) }}
         <fieldset>
            <legend class="text-muted">Delivery Details</legend>
            {{ form_row(edit_form.booked_in_datetime) }}
            {{ form_row(edit_form.contact_name) }}
            {{ form_row(edit_form.contact_phone_number) }}
          </fieldset>
          <fieldset>
            <legend class="text-muted">Supplier &amp; Courier</legend>
            {{ form_row(edit_form.supplier) }}
            {{ form_row(edit_form.logistics_company) }}
          </fieldset>
          <fieldset>
            <legend class="text-muted">Delivery Premises</legend>
            {{ form_row(edit_form.business_premises) }}
            {{ form_row(edit_form.employee) }}
          </fieldset>
          <fieldset>
            <legend class="text-muted">Delivered</legend>
            {{ form_row(edit_form.delivered_datetime) }}
          </fieldset>
        {{ form_rest(edit_form) }}
    </form>
    {{ form_end(edit_form) }}

        <ul class="record_actions">
    <li>
        <a href="{{ path('goods-in_supplier-delivery') }}">
            Back to the list
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
