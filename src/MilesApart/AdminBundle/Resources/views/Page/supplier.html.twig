{# src/MilesApart/AdminBundle/Resources/views/Page/suppliers.html.twig #}
{% extends 'MilesApartAdminBundle::layout.html.twig' %}

{# Set active page for interface highlighting #}
{% set active_page = 'suppliers' %}

{# Check if the current page is set, if not set to overview #}
{% if current_page is not defined %}
  {% set current_page = 'supplier_overview' %}
{% endif %}

{# Set the title of the page displayed in the browser #}
{% block title %}
  Suppliers
{% endblock%}

{# Set the header of the page #}
{% block page_name %}
  Suppliers				
{% endblock %}   

{# Set the introduction of the page #}
{% block page_introduction %}
  Add new and make changes to existing suppliers and supplier representatives
{% endblock %}



{# Set the sub navigation items for this area of the site #}
{% block left_nav %}
  <ul class="nav nav-list">
    {#Create the overview nav #}
    <li class="nav-header">Overview</li>
    <li {% if current_page == 'supplier_overview' %} class="active" {% endif %}>
        <a href="{{ path('miles_apart_admin_supplier') }}">Supplier overview</a>
    </li>

    {#Create the purchase orders nav #}
    <li class="nav-header">Purchase Order</li>
    <li {% if current_page == 'new_purchase_order' %} class="active" {% endif %}><a href="#">New purchase order</a></li>
	  <li {% if current_page == 'edit_purchase_order' %} class="active" {% endif %}><a href="#">Edit purchase orders</a></li>
    <li {% if current_page == 'view_purchase_order' %} class="active" {% endif %}><a href="#">View purchase orders</a></li>

    {#Create the supplier nav #}
    <li class="nav-header">Supplier</li>
    <li {% if current_page == 'supplier' %} class="active" {% endif %}>
      <a  href="{{ path('supplier_supplier') }}">View suppliers</a>
    </li>
    <li {% if current_page == 'new_supplier' %} class="active" {% endif %}>
      <a  href="{{ path('supplier_supplier_new') }}">New supplier</a>
    </li>
    
    {#Create the supplier rep nav #}
    <li class="nav-header">Supplier Representative</li>
    <li {% if current_page == 'supplier_representative' %} class="active" {% endif %}>
      <a  href="{{ path('supplier_supplier-representative') }}">View supplier representatives</a>
    </li>
    <li {% if current_page == 'new_supplier_representative' %} class="active" {% endif %}>
      <a href="{{ path('supplier_supplier-representative_new') }}">New supplier representative</a>
    </li>

    {#Create the supplier type nav #}
    <li class="nav-header">Supplier Type</li>
    <li {% if current_page == 'supplier_type' %} class="active" {% endif %}>
      <a  href="{{ path('supplier_supplier-type') }}">View supplier types</a>
    </li>
    <li {% if current_page == 'new_supplier_type' %} class="active" {% endif %}>
      <a href="{{ path('supplier_supplier-type_new') }}">New supplier type</a>
    </li>

    {#Create the supplier discount nav #}
    <li class="nav-header">Supplier Discount</li>
    <li {% if current_page == 'supplier_discount' %} class="active" {% endif %}>
      <a  href="{{ path('supplier_supplier-discount') }}">View supplier discounts</a>
    </li>
    <li {% if current_page == 'new_supplier_discount' %} class="active" {% endif %}>
      <a  href="{{ path('supplier_supplier-discount_new') }}">New supplier discount</a>
    </li>
   

  </ul>
{% endblock %}

{# Set the dynamic content for this template #}
{% block page_content %}

  
{% endblock %}




{% block sidebar_content %}
  <h3 class="underline">Quick links</h3>

  <h4 class="light">New purchase order</h4>
  <h4 class="light">Email company</h4>
  <h4 class="light">Print statement</h4>
  <h4 class="light">Book in delivery</h4>

{% endblock %}