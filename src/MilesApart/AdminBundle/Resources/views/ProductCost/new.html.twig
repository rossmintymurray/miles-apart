{# src/MilesApart/AdminBundle/Resources/views/Employees/new.html.twig #}
{% extends 'MilesApartAdminBundle::Page/product.html.twig' %}

{#Check if the form has been submitted or not and use the appropriate form template #}
{% if submitted == false %}
    {% form_theme form 'MilesApartAdminBundle:Form:fields.html.twig' 'MilesApartAdminBundle:Form:field_errors.html.twig' %}
{% else %}
    {% form_theme form 'MilesApartAdminBundle:Form:submitted_fields.html.twig' 'MilesApartAdminBundle:Form:field_errors.html.twig' %}
{% endif %}

{# Check if the current page is set, if not set to overview #}
{% if current_page is not defined %}
  {% set current_page = 'new_product_cost' %}
{% endif %}

{# Set the title of the page displayed in the browser #}
{% block title %}
	New Product Cost
{% endblock%}

{# Set the header of the page #}
{% block page_name %}
	New Product Cost		
{% endblock %}   

{# Set the introduction of the page #}
{% block page_introduction %}
   	Complete the form below to add a new Product Cost to the system
{% endblock %}

{% block page_content -%}

    {{ form_start(form) }}
        {{ form_errors(form) }}
          <fieldset>
            <legend class="text-muted">Product Cost Value</legend>
            {{ form_row(form.product_cost_value) }}
          </fieldset>
          <fieldset>
            <legend class="text-muted">Valid Dates</legend>
            {{ form_row(form.product_cost_valid_from) }}
            {{ form_row(form.product_cost_valid_until) }}
          </fieldset>
          <fieldset>
            <legend class="text-muted">Product Cost Details</legend>
            {{ form_row(form.product_cost_is_special) }}
            {{ form_row(form.product_supplier) }}
          </fieldset>
        {{ form_rest(form) }}
    </form>
    {{ form_end(form) }}

        <ul class="record_actions">
    <li>
        <a href="{{ path('product_product-cost') }}">
            Back to the list
        </a>
    </li>
</ul>
{% endblock %}
