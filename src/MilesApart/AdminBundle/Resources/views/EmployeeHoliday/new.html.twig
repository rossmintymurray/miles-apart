{# src/MilesApart/AdminBundle/Resources/views/Employees/new.html.twig #}
{% extends 'MilesApartAdminBundle::Page/hr.html.twig' %}

{#Check if the form has been submitted or not and use the appropriate form template #}
{% if submitted == false %}
    {% form_theme form 'MilesApartAdminBundle:Form:fields.html.twig' 'MilesApartAdminBundle:Form:field_errors.html.twig' %}
{% else %}
    {% form_theme form 'MilesApartAdminBundle:Form:submitted_fields.html.twig' 'MilesApartAdminBundle:Form:field_errors.html.twig' %}
{% endif %}

{# Check if the current page is set, if not set to overview #}
{% if current_page is not defined %}
  {% set current_page = 'new_employee_holiday' %}
{% endif %}

{# Set the title of the page displayed in the browser #}
{% block title %}
	New Employee Holiday
{% endblock%}

{# Set the header of the page #}
{% block page_name %}
	New Employee Holiday		
{% endblock %}   

{# Set the introduction of the page #}
{% block page_introduction %}
   	Complete the form below to add a new Employee Holiday to the system
{% endblock %}

{% block page_content -%}

    {{ form_start(form) }}
        {{ form_errors(form) }}
         <fieldset>
            <legend class="text-muted">Holiday Dates</legend>
            {{ form_row(form.employee) }}
          </fieldset>
          <fieldset>
            <legend class="text-muted">Holiday Dates</legend>
            {{ form_row(form.employee_holiday_start_date) }}
            {{ form_row(form.employee_holiday_end_date) }}
          </fieldset>
          <fieldset>
            <legend class="text-muted">Authorisation</legend>
            {{ form_row(form.employee_holiday_authorised) }}
            {{ form_row(form.employee_holiday_authorised_by) }}
            </fieldset>
        {{ form_rest(form) }}
    </form>
    {{ form_end(form) }}

        <ul class="record_actions">
    <li>
        <a href="{{ path('hr_employee-holiday') }}">
            Back to the list
        </a>
    </li>
</ul>
{% endblock %}
