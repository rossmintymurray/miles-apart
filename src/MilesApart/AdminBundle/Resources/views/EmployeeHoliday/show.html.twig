{# src/MilesApart/AdminBundle/Resources/views/Employees/show.html.twig #}
{% extends 'MilesApartAdminBundle::Page/hr.html.twig' %}

{# Set  current page for interface highlighting #}
{% set current_page = 'employee_holiday' %}

{# Set the page title #}
{% block title %}
    - Employee Holiday
{% endblock%}

{# Set the page header #}
{% block page_name %}
    - Employee Holiday           
{% endblock %}   

{# Set the page sub header #}
{% block page_introduction %}
    View Employee Holiday details
{% endblock %}

{% block page_content -%}


    <table class=\"table table-hover table-bordered table-striped main_content_table show_table\">
        <tbody>
            <tr>
                <th>ID</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Employee holiday start date</th>
                <td>{{ entity.employeeholidaystartdate|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Employee holiday end date</th>
                <td>{{ entity.employeeholidayenddate|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Employee holiday date created</th>
                <td>{{ entity.employeeholidaydatecreated|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Employee holiday date modified</th>
                <td>{{ entity.employeeholidaydatemodified|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Employee holiday authorised</th>
                <td>{{ entity.employeeholidayauthorised }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('hr_employee-holiday') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('hr_employee-holiday_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
