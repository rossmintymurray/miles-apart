{# src/MilesApart/AdminBundle/Resources/views/Employees/show.html.twig #}
{% extends 'MilesApartAdminBundle::Page/customerorder.html.twig' %}

{# Set  current page for interface highlighting #}
{% set current_page = 'returned_reason' %}

{# Set the page title #}
{% block title %}
    {{ entity.returnedreason }} - Returned Reason
{% endblock%}

{# Set the page header #}
{% block page_name %}
    {{ entity.returnedreason }} - Returned Reason           
{% endblock %}   

{# Set the page sub header #}
{% block page_introduction %}
    View Returned Reason details
{% endblock %}

{% block page_content -%}

    <table class=\"table table-hover table-bordered table-striped main_content_table show_table\">
        <tbody>
            <tr>
                <th>ID</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Returned reason</th>
                <td>{{ entity.returnedreason }}</td>
            </tr>
            <tr>
                <th>Returned reason description</th>
                <td>{{ entity.returnedreasondescription }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('customer-order_returned-reason') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('customer-order_returned-reason_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
