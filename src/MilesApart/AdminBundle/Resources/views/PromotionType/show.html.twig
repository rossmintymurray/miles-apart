{# src/MilesApart/AdminBundle/Resources/views/Employees/show.html.twig #}
{% extends 'MilesApartAdminBundle::Page/campaign.html.twig' %}

{# Set  current page for interface highlighting #}
{% set current_page = 'promotion_type' %}

{# Set the page title #}
{% block title %}
    - Promotion Type
{% endblock%}

{# Set the page header #}
{% block page_name %}
    - Promotion Type           
{% endblock %}   

{# Set the page sub header #}
{% block page_introduction %}
    View Promotion Type details
{% endblock %}

{% block page_content -%}


    <table class=\"table table-hover table-bordered table-striped main_content_table show_table\">
        <tbody>
            <tr>
                <th>ID</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Promotion type name</th>
                <td>{{ entity.promotiontypename }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('campaign_promotion-type') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('campaign_promotion-type_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
