{% extends 'MilesApartAdminBundle::Page/finance.html.twig' %}

{# Set  current page for interface highlighting #}
{% set current_page = 'supplier_invoice_purchase_order' %}

{# Set the page title #}
{% block title %}
    {{ entity.id }} - Supplier Invoice Purchase Order
{% endblock%}

{# Set the page header #}
{% block page_name %}
    {{ entity.id }} - Supplier Invoice Purchase Order           
{% endblock %}   

{# Set the page sub header #}
{% block page_introduction %}
    View Supplier Invoice Purchase Order details
{% endblock %}

{% block page_content -%}

    <table class=\"table table-hover table-bordered table-striped main_content_table show_table\">
        <tbody>
            <tr>
                <th>ID</th>
                <td>{{ entity.id }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('finance_supplier-invoice-purchase-order') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('finance_supplier-invoice-purchase-order_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
