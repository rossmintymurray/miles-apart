{# src/MilesApart/AdminBundle/Resources/views/Employees/show.html.twig #}
{% extends 'MilesApartAdminBundle::Page/finance.html.twig' %}

{# Set  current page for interface highlighting #}
{% set current_page = 'employee_payment' %}

{# Set the page title #}
{% block title %}
     Employee Payment
{% endblock%}

{# Set the page header #}
{% block page_name %}
    Employee Payment         
{% endblock %}   

{# Set the page sub header #}
{% block page_introduction %}
    View Employee Payment details
{% endblock %}

{% block page_content -%}


    <table class=\"table table-hover table-bordered table-striped main_content_table show_table\">
        <tbody>
            <tr>
                <th>ID</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Employee payment total</th>
                <td>{{ entity.employeepaymenttotal }}</td>
            </tr>
            <tr>
                <th>Employee payment date</th>
                <td>{{ entity.employeepaymentdate|date('Y-m-d H:i:s') }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('finance_employee-payment') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('finance_employee-payment_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
