{# src/MilesApart/AdminBundle/Resources/views/Page/Employees/all.html.twig #}
{% extends 'MilesApartAdminBundle::Page/supplier.html.twig' %}

{#Check if the form has been submitted or not and use the appropriate form template #}
{% if submitted == false %}
    {% form_theme edit_form 'MilesApartAdminBundle:Form:fields.html.twig' 'MilesApartAdminBundle:Form:field_errors.html.twig' %}
{% else %}
    {% form_theme edit_form 'MilesApartAdminBundle:Form:submitted_fields.html.twig' 'MilesApartAdminBundle:Form:field_errors.html.twig' %}
{% endif %}

{# Check if the current page is set, if not set to overview #}
{% if current_page is not defined %}
  {% set current_page = 'supplier_discount' %}
{% endif %}

{# Set the title of the page displayed in the browser #}
{% block title %}
  Edit Supplier Discount
{% endblock%}

{# Set the header of the page #}
{% block page_name %}
  Edit Supplier Discount 		
{% endblock %}   

{# Set the introduction of the page #}
{% block page_introduction %}
  Edit existing Supplier Discount 
{% endblock %}

{# Set the dynamic content for this template #}
{% block page_content %}
    
    {{ form_start(edit_form) }}
        {{ form_errors(edit_form) }}
         <fieldset>
            <legend class="text-muted">Discount Details</legend>
            {{ form_row(edit_form.supplier_discount_percentage) }}
            {{ form_row(edit_form.supplier_discount_date_valid_from) }}
            {{ form_row(edit_form.supplier_discount_date_valid_until) }}
          </fieldset>
          <fieldset>
            <legend class="text-muted">Supplier</legend>
            {{ form_row(edit_form.supplier) }}
            </fieldset>
        {{ form_rest(edit_form) }}
    </form>
    {{ form_end(edit_form) }}

        <ul class="record_actions">
    <li>
        <a href="{{ path('supplier_supplier-discount') }}">
            Back to the list
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
