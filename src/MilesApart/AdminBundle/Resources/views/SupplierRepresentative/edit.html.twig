{# src/MilesApart/AdminBundle/Resources/views/Page/Employees/all.html.twig #}
{% extends 'MilesApartAdminBundle::Page/supplier.html.twig' %}

{#Check if the form has been submitted or not and use the appropriate form template #}
{% if submitted == false %}
    {% form_theme edit_form 'MilesApartAdminBundle:Form:fields.html.twig' 'MilesApartAdminBundle:Form:field_errors.html.twig' %}
{% else %}
    {% form_theme edit_form 'MilesApartAdminBundle:Form:submitted_fields.html.twig' 'MilesApartAdminBundle:Form:field_errors.html.twig' %}
{% endif %}

{# Check if the current page is set, if not set to overview #}
{% if current_page is not defined %}
  {% set current_page = 'supplier_representatives' %}
{% endif %}

{# Set the title of the page displayed in the browser #}
{% block title %}
    Edit Supplier Representative
{% endblock%}

{# Set the header of the page #}
{% block page_name %}
    Edit Supplier Representative		
{% endblock %}   

{# Set the introduction of the page #}
{% block page_introduction %}
    Edit supplier representative
{% endblock %}


{# Set the dynamic content for this template #}
{% block page_content %}
    

    {{ form_start(edit_form) }}
        {{ form_errors(edit_form) }}
         <fieldset>
            <legend class="text-muted">Company</legend>
            {{ form_row(edit_form.supplier) }}
            {{ form_row(edit_form.supplier_representative_start_date) }}
        </fieldset>
        <fieldset>
            <legend class="text-muted">Name</legend>
            {{ form_row(edit_form.supplier_representative_first_name) }}
            {{ form_row(edit_form.supplier_representative_surname) }}
        </fieldset>
        <fieldset>
            <legend class="text-muted">Address</legend>
            {{ form_row(edit_form.supplier_representative_address_1) }}
            {{ form_row(edit_form.supplier_representative_address_2) }}
            {{ form_row(edit_form.supplier_representative_town) }}
            {{ form_row(edit_form.supplier_representative_county) }}
            {{ form_row(edit_form.supplier_representative_postcode) }}
            {{ form_row(edit_form.supplier_representative_country) }}
        </fieldset>
        <fieldset>
            <legend class="text-muted">Contact</legend>
            {{ form_row(edit_form.supplier_representative_mobile_number) }}
            {{ form_row(edit_form.supplier_representative_landline_number) }}
            {{ form_row(edit_form.supplier_representative_email) }}
        <fieldset>
            {{ form_row(edit_form.submit) }}
        </fieldset>
        {{ form_rest(edit_form) }}
   
    {{ form_end(edit_form) }}

        <ul class="record_actions">
    <li>
        <a href="{{ path('supplier_supplier-representative') }}">
            Back to the list
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
