{# src/MilesApart/AdminBundle/Resources/views/Employees/new.html.twig #}
{% extends 'MilesApartAdminBundle::Page/supplier.html.twig' %}

{#Check if the form has been submitted or not and use the appropriate form template #}
{% if submitted == false %}
    {% form_theme form 'MilesApartAdminBundle:Form:fields.html.twig' 'MilesApartAdminBundle:Form:field_errors.html.twig' %}
{% else %}
    {% form_theme form 'MilesApartAdminBundle:Form:submitted_fields.html.twig' 'MilesApartAdminBundle:Form:field_errors.html.twig' %}
{% endif %}

{# Check if the current page is set, if not set to overview #}
{% if current_page is not defined %}
  {% set current_page = 'new_supplier_representative' %}
{% endif %}

{# Set the title of the page displayed in the browser #}
{% block title %}
	New Supplier Representative
{% endblock%}

{# Set the header of the page #}
{% block page_name %}
	New Supplier Representative		
{% endblock %}   

{# Set the introduction of the page #}
{% block page_introduction %}
   	Complete the form below to add a new supplier representative to the system
{% endblock %}

{% block page_content -%}

    {{ form_start(form) }}
        {{ form_errors(form) }}
         <fieldset>
            <legend class="text-muted">Company</legend>
            {{ form_row(form.supplier) }}
            {{ form_row(form.supplier_representative_start_date) }}
        </fieldset>
        <fieldset>
            <legend class="text-muted">Name</legend>
            {{ form_row(form.supplier_representative_first_name) }}
            {{ form_row(form.supplier_representative_surname) }}
        </fieldset>
        <fieldset>
            <legend class="text-muted">Address</legend>
            {{ form_row(form.supplier_representative_address_1) }}
            {{ form_row(form.supplier_representative_address_2) }}
            {{ form_row(form.supplier_representative_town) }}
            {{ form_row(form.supplier_representative_county) }}
            {{ form_row(form.supplier_representative_postcode) }}
            {{ form_row(form.supplier_representative_country) }}
        </fieldset>
        <fieldset>
            <legend class="text-muted">Contact</legend>
            {{ form_row(form.supplier_representative_mobile_number) }}
            {{ form_row(form.supplier_representative_landline_number) }}
            {{ form_row(form.supplier_representative_email) }}
        <fieldset>
            {{ form_row(form.submit) }}
        </fieldset>
        {{ form_rest(form) }}
   
    {{ form_end(form) }}

        <ul class="record_actions">
    <li>
        <a href="{{ path('supplier_supplier-representative') }}">
            Back to the list
        </a>
    </li>
</ul>
{% endblock %}
