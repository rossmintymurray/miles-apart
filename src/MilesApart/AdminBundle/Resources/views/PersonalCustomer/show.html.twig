{# src/MilesApart/AdminBundle/Resources/views/Employees/show.html.twig #}
{% extends 'MilesApartAdminBundle::Page/customer.html.twig' %}

{# Set  current page for interface highlighting #}
{% set current_page = 'personal_customer' %}

{# Set the page title #}
{% block title %}
    {{ entity.personalcustomerfirstname }} {{ entity.personalcustomersurname }} - Personal Customer
{% endblock%}

{# Set the page header #}
{% block page_name %}
    {{ entity.personalcustomerfirstname }} {{ entity.personalcustomersurname }} - Personal Customer           
{% endblock %}   

{# Set the page sub header #}
{% block page_introduction %}
    View Personal Customer details
{% endblock %}

{% block page_content -%}


    <table class=\"table table-hover table-bordered table-striped main_content_table show_table\">
        <tbody>
            <tr>
                <th>ID</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Personal customer first name</th>
                <td>{{ entity.personalcustomerfirstname }}</td>
            </tr>
            <tr>
                <th>Personal customer surname</th>
                <td>{{ entity.personalcustomersurname }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('customer_personal-customer') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('customer_personal-customer_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
