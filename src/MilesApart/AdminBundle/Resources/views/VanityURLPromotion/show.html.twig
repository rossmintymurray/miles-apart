{# src/MilesApart/AdminBundle/Resources/views/Employees/show.html.twig #}
{% extends 'MilesApartAdminBundle::Page/campaign.html.twig' %}

{# Set  current page for interface highlighting #}
{% set current_page = 'vanity_url_promotion' %}

{# Set the page title #}
{% block title %}
    {{ entity.id }} - Vanity URL Promotion
{% endblock%}

{# Set the page header #}
{% block page_name %}
    {{ entity.id }} - Vanity URL Promotion           
{% endblock %}   

{# Set the page sub header #}
{% block page_introduction %}
    View Vanity URL Promotion details
{% endblock %}

{% block page_content -%}

    <table class=\"table table-hover table-bordered table-striped main_content_table show_table\">
        <tbody>
            <tr>
                <th>ID</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Vanity url promotion date created</th>
                <td>{{ entity.vanityurlpromotiondatecreated|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Vanity url promotion date modified</th>
                <td>{{ entity.vanityurlpromotiondatemodified|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Vanity url promotion landing page</th>
                <td>{{ entity.vanityurlpromotionlandingpage }}</td>
            </tr>
            <tr>
                <th>Vanity url promotion date required</th>
                <td>{{ entity.vanityurlpromotiondaterequired|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Vanity url promotion date to expire</th>
                <td>{{ entity.vanityurlpromotiondatetoexpire|date('Y-m-d H:i:s') }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('campaign_vanity-url-promotion') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('campaign_vanity-url-promotion_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
