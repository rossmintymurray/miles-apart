{# src/MilesApart/AdminBundle/Resources/views/Page/Employees/all.html.twig #}
{% extends 'MilesApartAdminBundle::Page/campaign.html.twig' %}

{#Check if the form has been submitted or not and use the appropriate form template #}
{% if submitted == false %}
    {% form_theme edit_form 'MilesApartAdminBundle:Form:fields.html.twig' 'MilesApartAdminBundle:Form:field_errors.html.twig' %}
{% else %}
    {% form_theme edit_form 'MilesApartAdminBundle:Form:submitted_fields.html.twig' 'MilesApartAdminBundle:Form:field_errors.html.twig' %}
{% endif %}

{# Check if the current page is set, if not set to overview #}
{% if current_page is not defined %}
  {% set current_page = 'vanity_url_promotion' %}
{% endif %}

{# Set the title of the page displayed in the browser #}
{% block title %}
  Edit Vanity URL Promotion
{% endblock%}

{# Set the header of the page #}
{% block page_name %}
  Edit Vanity URL Promotion		
{% endblock %}   

{# Set the introduction of the page #}
{% block page_introduction %}
  Edit existing Vanity URL Promotion
{% endblock %}

{# Set the dynamic content for this template #}
{% block page_content %}

    {{ form_start(edit_form) }}
        {{ form_errors(edit_form) }}
         <fieldset>
            <legend class="text-muted">Landing Page</legend>
            {{ form_row(edit_form.vanity_url_promotion_landing_page) }}
          </fieldset>
          <fieldset>
            <legend class="text-muted">Dates Active</legend>
            {{ form_row(edit_form.vanity_url_promotion_date_required) }}
            {{ form_row(edit_form.vanity_url_promotion_date_to_expire) }}
          </fieldset>
          <fieldset>
            <legend class="text-muted">Vanity URL</legend>
            {{ form_row(edit_form.vanity_url) }}
          </fieldset>
          <fieldset>
            <legend class="text-muted">Promotion</legend>
            {{ form_row(edit_form.promotion) }}
            </fieldset>
        {{ form_rest(edit_form) }}
    </form>
    {{ form_end(edit_form) }}

        <ul class="record_actions">
    <li>
        <a href="{{ path('campaign_vanity-url-promotion') }}">
            Back to the list
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
