{# src/MilesApart/AdminBundle/Resources/views/Page/Employees/all.html.twig #}
{% extends 'MilesApartAdminBundle::Page/customerorder.html.twig' %}

{#Check if the form has been submitted or not and use the appropriate form template #}
{% if submitted == false %}
    {% form_theme edit_form 'MilesApartAdminBundle:Form:fields.html.twig' 'MilesApartAdminBundle:Form:field_errors.html.twig' %}
{% else %}
    {% form_theme edit_form 'MilesApartAdminBundle:Form:submitted_fields.html.twig' 'MilesApartAdminBundle:Form:field_errors.html.twig' %}
{% endif %}

{# Check if the current page is set, if not set to overview #}
{% if current_page is not defined %}
  {% set current_page = 'postage_band_dispatch_logistics' %}
{% endif %}

{# Set the title of the page displayed in the browser #}
{% block title %}
  Edit Postage Band Dispatch Logistics
{% endblock%}

{# Set the header of the page #}
{% block page_name %}
  Edit Postage Band Dispatch Logistics	
{% endblock %}   

{# Set the introduction of the page #}
{% block page_introduction %}
  Edit existing Postage Band Dispatch Logistics
{% endblock %}

{# Set the dynamic content for this template #}
{% block page_content %}
    
    {{ form_start(edit_form) }}
        {{ form_errors(edit_form) }}
         <fieldset>
            <legend class="text-muted">Postage Band Price</legend>
            {{ form_row(edit_form.postage_band_price) }}
            {{ form_row(edit_form.postage_band_price_effective_date) }}
          </fieldset>
          <fieldset>
            <legend class="text-muted">Logistics Company</legend>
            {{ form_row(edit_form.logistics_company) }}
          </fieldset>
          <fieldset>
            <legend class="text-muted">Postage Band</legend>
            {{ form_row(edit_form.postage_band) }}
            </fieldset>
        {{ form_rest(edit_form) }}
    </form>
    {{ form_end(edit_form) }}

        <ul class="record_actions">
    <li>
        <a href="{{ path('customer-order_postage-band-dispatch-logistics') }}">
            Back to the list
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
