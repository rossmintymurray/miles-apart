{# src/MilesApart/AdminBundle/Resources/views/Employees/new.html.twig #}
{% extends 'MilesApartAdminBundle::Page/customerorder.html.twig' %}

{#Check if the form has been submitted or not and use the appropriate form template #}
{% if submitted == false %}
    {% form_theme form 'MilesApartAdminBundle:Form:fields.html.twig' 'MilesApartAdminBundle:Form:field_errors.html.twig' %}
{% else %}
    {% form_theme form 'MilesApartAdminBundle:Form:submitted_fields.html.twig' 'MilesApartAdminBundle:Form:field_errors.html.twig' %}
{% endif %}

{# Check if the current page is set, if not set to overview #}
{% if current_page is not defined %}
  {% set current_page = 'new_postage_band_dispatch_logistics' %}
{% endif %}

{# Set the title of the page displayed in the browser #}
{% block title %}
	New Postage Band Dispatch Logistics
{% endblock%}

{# Set the header of the page #}
{% block page_name %}
	New Postage Band Dispatch Logistics		
{% endblock %}   

{# Set the introduction of the page #}
{% block page_introduction %}
   	Complete the form below to add a new Postage Band Dispatch Logistics to the system
{% endblock %}

{% block page_content -%}

    {{ form_start(form) }}
        {{ form_errors(form) }}
         <fieldset>
            <legend class="text-muted">Postage Band Price</legend>
            {{ form_row(form.postage_band_price) }}
            {{ form_row(form.postage_band_price_effective_date) }}
          </fieldset>
          <fieldset>
            <legend class="text-muted">Logistics Company</legend>
            {{ form_row(form.logistics_company) }}
          </fieldset>
          <fieldset>
            <legend class="text-muted">Postage Band</legend>
            {{ form_row(form.postage_band) }}
            </fieldset>
        {{ form_rest(form) }}
    </form>
    {{ form_end(form) }}

        <ul class="record_actions">
    <li>
        <a href="{{ path('customer-order_postage-band-dispatch-logistics') }}">
            Back to the list
        </a>
    </li>
</ul>
{% endblock %}
