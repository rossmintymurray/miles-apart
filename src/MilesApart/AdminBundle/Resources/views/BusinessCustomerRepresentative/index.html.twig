{# src/MilesApart/AdminBundle/Resources/views/Employees/index.html.twig #}
{% extends 'MilesApartAdminBundle::Page/customer.html.twig' %}


{# Check if the current page is set, if not set to overview #}
{% if current_page is not defined %}
  {% set current_page = 'business_customer_representative' %}
{% endif %}

{# Set the title of the page displayed in the browser #}
{% block title %}
    Business Customer Representatives
{% endblock%}

{# Set the header of the page #}
{% block page_name %}
    Business Customer Representatives           
{% endblock %}   

{# Set the introduction of the page #}
{% block page_introduction %}
  Add new and make changes to existing Business Customer Representatives
{% endblock %}

{% block page_content -%}

    <table class="table table-hover table-bordered table-striped main_content_table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Business customer representative first name</th>
                <th>Business customer representative surname</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in pager %}
            <tr>
                <td><a href="{{ path('customer_business-customer-representative_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.businesscustomerrepresentativefirstname }}</td>
                <td>{{ entity.businesscustomerrepresentativesurname }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('customer_business-customer-representative_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('customer_business-customer-representative_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('customer_business-customer-representative_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}

{# Check if pagination needed and if so, create the pagination links #}
{% block pagination_links %}
  {% if pager.haveToPaginate %}
    {{ pagerfanta(pager, 'twitter_bootstrap3', pagerfanta_opts) }}
  {% endif %} 
{% endblock %}

{% block sidebar_content %}
  <h3 class="underline">Quick links</h3>

  <h4 class="light">New purchase order</h4>
  <h4 class="light">Email company</h4>
  <h4 class="light">Print statement</h4>
  <h4 class="light">Book in delivery</h4>

{% endblock %}
