{# src/MilesApart/AdminBundle/Resources/views/Employees/new.html.twig #}
{% extends 'MilesApartAdminBundle::Page/finance.html.twig' %}

{#Check if the form has been submitted or not and use the appropriate form template #}
{% if submitted == false %}
    {% form_theme form 'MilesApartAdminBundle:Form:fields.html.twig' 'MilesApartAdminBundle:Form:field_errors.html.twig' %}
{% else %}
    {% form_theme form 'MilesApartAdminBundle:Form:submitted_fields.html.twig' 'MilesApartAdminBundle:Form:field_errors.html.twig' %}
{% endif %}

{# Check if the current page is set, if not set to overview #}
{% if current_page is not defined %}
  {% set current_page = 'new_daily_take_business_premises' %}
{% endif %}

{# Set the title of the page displayed in the browser #}
{% block title %}
	New Daily Take Business Premises
{% endblock%}

{# Set the header of the page #}
{% block page_name %}
	New Daily Take Business Premises		
{% endblock %}   

{# Set the introduction of the page #}
{% block page_introduction %}
   	Complete the form below to add a new Daily Take Business Premises to the system
{% endblock %}

{% block page_content -%}

    {{ form_start(form) }}
        {{ form_errors(form) }}
         <fieldset>
            <legend class="text-muted">Till readings</legend>
            {{ form_row(form.z_reading_cash) }}
            {{ form_row(form.z_reading_card) }}
          </fieldset>
          <fieldset>
            <legend class="text-muted">Actual amounts</legend>
            {{ form_row(form.counted_cash) }}
            {{ form_row(form.counted_card) }}
            </field
          <fieldset>
            <legend class="text-muted">Date &amp; Premises</legend>
            {{ form_row(form.daily_take) }}
            {{ form_row(form.business_premises) }}
            </fieldset>
        {{ form_rest(form) }}
    </form>
    {{ form_end(form) }}

        <ul class="record_actions">
    <li>
        <a href="{{ path('finance_daily-take-business-premises') }}">
            Back to the list
        </a>
    </li>
</ul>
{% endblock %}
