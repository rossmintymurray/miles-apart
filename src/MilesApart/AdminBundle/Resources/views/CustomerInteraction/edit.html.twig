{# src/MilesApart/AdminBundle/Resources/views/Page/Employees/all.html.twig #}
{% extends 'MilesApartAdminBundle::Page/customer.html.twig' %}

{#Check if the form has been submitted or not and use the appropriate form template #}
{% if submitted == false %}
    {% form_theme edit_form 'MilesApartAdminBundle:Form:fields.html.twig' 'MilesApartAdminBundle:Form:field_errors.html.twig' %}
{% else %}
    {% form_theme edit_form 'MilesApartAdminBundle:Form:submitted_fields.html.twig' 'MilesApartAdminBundle:Form:field_errors.html.twig' %}
{% endif %}

{# Check if the current page is set, if not set to overview #}
{% if current_page is not defined %}
  {% set current_page = 'customer_interaction' %}
{% endif %}

{# Set the title of the page displayed in the browser #}
{% block title %}
  Edit Customer Interaction
{% endblock%}

{# Set the header of the page #}
{% block page_name %}
  Edit Customer Interaction		
{% endblock %}   

{# Set the introduction of the page #}
{% block page_introduction %}
  Edit existing Customer Interaction
{% endblock %}


{# Set the dynamic content for this template #}
{% block page_content %}
    

    {{ form_start(edit_form) }}
        {{ form_errors(edit_form) }}
         <fieldset>
            <legend class="text-muted">Customer</legend>
            {{ form_row(edit_form.customer) }}
          </fieldset>
          <fieldset>
            <legend class="text-muted">Customer Interaction</legend>
            {{ form_row(edit_form.customer_interaction_date_resolved) }}
            {{ form_row(edit_form.customer_interaction_notes) }}
            {{ form_row(edit_form.customer_interaction_reason) }}
            {{ form_row(edit_form.customer_interaction_resolution) }}
            {{ form_row(edit_form.customer_interaction_type) }}
          </fieldset>
        {{ form_rest(edit_form) }}
    </form>
    {{ form_end(edit_form) }}

        <ul class="record_actions">
    <li>
        <a href="{{ path('customer_customer-interaction') }}">
            Back to the list
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
