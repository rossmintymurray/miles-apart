{# src/MilesApart/AdminBundle/Resources/views/Employees/show.html.twig #}
{% extends 'MilesApartAdminBundle::Page/customer.html.twig' %}

{# Set  current page for interface highlighting #}
{% set current_page = 'customer_interaction' %}

{# Set the page title #}
{% block title %}
    - Customer Interaction
{% endblock%}

{# Set the page header #}
{% block page_name %}
    - Customer Interaction           
{% endblock %}   

{# Set the page sub header #}
{% block page_introduction %}
    View Customer Interaction details
{% endblock %}

{% block page_content -%}


    <table class=\"table table-hover table-bordered table-striped main_content_table show_table\">
        <tbody>
            <tr>
                <th>ID</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Customer interaction date created</th>
                <td>{{ entity.customerinteractiondatecreated|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Customer interaction date modified</th>
                <td>{{ entity.customerinteractiondatemodified|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Customer interaction date resolved</th>
                <td>{{ entity.customerinteractiondateresolved|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Customer interaction notes</th>
                <td>{{ entity.customerinteractionnotes }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('customer_customer-interaction') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('customer_customer-interaction_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
