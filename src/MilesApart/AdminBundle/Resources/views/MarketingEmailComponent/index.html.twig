{# src/MilesApart/AdminBundle/Resources/views/Employees/index.html.twig #}
{% extends 'MilesApartAdminBundle::Page/campaign.html.twig' %}


{# Check if the current page is set, if not set to overview #}
{% if current_page is not defined %}
  {% set current_page = 'marketing_email_component' %}
{% endif %}

{# Set the title of the page displayed in the browser #}
{% block title %}
    Marketing Email Components
{% endblock%}

{# Set the header of the page #}
{% block page_name %}
    Marketing Email Components           
{% endblock %}   

{# Set the introduction of the page #}
{% block page_introduction %}
  Add new and make changes to existing Marketing Email Components
{% endblock %}

{% block page_content -%}
    <h1>All MarketingEmailComponent</h1>

    <table class="table table-hover table-bordered table-striped main_content_table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Marketing email component name</th>
                <th>Marketing email component content</th>
                <th>Marketing email component date created</th>
                <th>Marketing email component date modified</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in pager %}
            <tr>
                <td><a href="{{ path('campaign_marketing-email-component_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.marketingemailcomponentname }}</td>
                <td>{{ entity.marketingemailcomponentcontent }}</td>
                <td>{% if entity.marketingemailcomponentdatecreated %}{{ entity.marketingemailcomponentdatecreated|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.marketingemailcomponentdatemodified %}{{ entity.marketingemailcomponentdatemodified|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('campaign_marketing-email-component_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('campaign_marketing-email-component_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('campaign_marketing-email-component_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}

{# Check if pagination needed and if so, create the pagination links #}
{% block pagination_links %}
  {% if pager.haveToPaginate %}
    {{ pagerfanta(pager, 'twitter_bootstrap3', pagerfanta_opts) }}
  {% endif %} 
{% endblock %}

{% block sidebar_content %}
  <h3 class="underline">Quick links</h3>

  <h4 class="light">New purchase order</h4>
  <h4 class="light">Email company</h4>
  <h4 class="light">Print statement</h4>
  <h4 class="light">Book in delivery</h4>

{% endblock %}
