{# src/MilesApart/AdminBundle/Resources/views/Employees/new.html.twig #}
{% extends 'MilesApartAdminBundle::Page/webmanagement.html.twig' %}

{#Check if the form has been submitted or not and use the appropriate form template #}
{% if submitted == false %}
    {% form_theme form 'MilesApartAdminBundle:Form:fields.html.twig' 'MilesApartAdminBundle:Form:field_errors.html.twig' %}
{% else %}
    {% form_theme form 'MilesApartAdminBundle:Form:submitted_fields.html.twig' 'MilesApartAdminBundle:Form:field_errors.html.twig' %}
{% endif %}
{# Check if the current page is set, if not set to overview #}
{% if current_page is not defined %}
  {% set current_page = 'new_admin_user' %}
{% endif %}

{# Set the title of the page displayed in the browser #}
{% block title %}
	New Admin User
{% endblock%}

{# Set the header of the page #}
{% block page_name %}
	New Admin User		
{% endblock %}   

{# Set the introduction of the page #}
{% block page_introduction %}
   	Complete the form below to add a new admin user to the system
{% endblock %}

{% block page_content -%}
    
    {# Create and show the form #}
    {{ form_start(form) }}
        {{ form_errors(form) }}

        {# Create and show the new admin user type #}
        <fieldset>
            <legend class="text-muted">Admin User</legend>
            {{ form_row(form.username) }}
            {{ form_row(form.password) }}
            {{ form_row(form.employee) }}
            {{ form_row(form.admin_user_type) }}
            {{ form_row(form.is_active) }}
        </fieldset>
        <fieldset>
            {{ form_row(form.submit) }}
        </fieldset>    
        
        {{ form_rest(form) }}
    
    {{ form_end(form) }}

    <ul class="record_actions">
        <li>
            <a href="{{ path('website-management_admin-user') }}">
                Back to the list
            </a>
        </li>
    </ul>
{% endblock %}
